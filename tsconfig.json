{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ES6",
        "outDir": "./build",
        "rootDir": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "include": ["./src/**/*", "tests/data-access/local-file-storage.ts"],
    "exclude": ["./dist", "./node_modules", "./tests/**/*"]
}
