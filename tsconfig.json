{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        // "moduleResolution": "node", // Use node16 or nodenext for proper .js handling
        "outDir": "./build",
        "rootDir": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./build", "./node_modules", "./tests/**/*"]
}
